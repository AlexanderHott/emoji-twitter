// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model Post {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())

    content  String @db.VarChar(255)
    authorId String
    likes    Int    @default(0)

    userLikes UserLikes[]
    reposts   Repost[]

    @@index([authorId])
}

model UserLikes {
    createdAt DateTime @default(now())

    userId String
    postId String

    post Post @relation(fields: [postId], references: [id])

    @@id([userId, postId])
    @@unique([userId, postId])
    @@index([postId])
}

model Repost {
    createdAt DateTime @default(now())

    postId String
    post   Post   @relation(fields: [postId], references: [id])

    userId String

    @@unique([userId, postId])
    @@index([postId])
}
